<div id="filters" class="panel panel-default">
  <div class="panel-body">
    <%= form_tag params, method: :get, class: "form-inline" do %>

      <%= hidden_field_tag :scope, nil, value: params[:scope] %>
      <%= hidden_field_tag :order, nil, value: params[:order] %>

      <% filter_map.each do |name, options| %>
        <div class="filter form-group">
          <%= label_tag name, godmin_translate("filters.labels.#{name}", default: name.to_s.titleize) %><br>
          <%= filter_input_tag name, options %>
        </div>
      <% end %>

      <div class="pull-right">
        <label>&nbsp;</label><br>
        <%= button_tag godmin_translate("filters.buttons.apply"), class: "btn btn-default" %>
        <%= link_to godmin_translate("filters.buttons.clear"), polymorphic_path(@resource_class, scope: params[:scope], order: params[:order]), class: "btn btn-default" %>
      </div>

    <% end %>
  </div>
</div>
